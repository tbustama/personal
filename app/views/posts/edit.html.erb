<h1>Edit Post</h1>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg|%>
            <div class="alert alert-danger"><%= msg%></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body%>
    </p>

    <p>
        <%= f.submit({:class => 'btn'})%>
    </p>
<% end %>